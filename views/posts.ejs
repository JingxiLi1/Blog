<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Posts</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container">
    <h1>All Posts</h1>
    
    <% if (posts && posts.length > 0) { %>
      <% posts.forEach(post => { %>
        <div class="post">
          <h2><a href="/posts/<%= post._id %>"><%= post.title %></a></h2>
          <p>Author: <%= post.author.email %> | Published on: <%= post.createdAt.toLocaleDateString() %></p>
          <p><%= post.body.substring(0, 100) %>...</p>
        </div>
      <% }) %>
    <% } else { %>
      <p>No posts available at the moment.</p>
    <% } %>
  </div>

  <%- include('partials/footer') %>
</body>
</html>


